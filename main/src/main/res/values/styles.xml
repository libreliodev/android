<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="spbStyle">@style/SmoothProgressBar</item>
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
        <item name="android:buttonStyle">@style/mainGridViewButtonStyle</item>
        <item name="android:textColor">@color/text_color</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBarStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Theme.Billing" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="spbStyle">@style/SmoothProgressBar</item>
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
        <item name="android:buttonStyle">@style/mainGridViewButtonStyle</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- This one is different to main theme! -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="mainGridViewButtonStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:background">@drawable/magazines_view_button_selector</item>
        <item name="android:textColor">@color/magazine_view_button_text_color</item>
        <item name="android:textSize">@dimen/preview_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/colorPrimary</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="deletebutton" parent="mainGridViewButtonStyle">
        <item name="android:background">@drawable/downloaded_magazines_item_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>